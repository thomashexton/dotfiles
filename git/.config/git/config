[diff]
    external = difft

[pager]
    branch = false

[alias]
    # Traditional aliases
    tdiff = -c diff.external= diff --no-ext-diff
    # Parent branch
    parent = "!git show-branch | grep '*' | grep -v \"$(git rev-parse --abbrev-ref HEAD)\" | head -n1 | sed 's/.*\\[\\(.*\\)\\].*/\\1/' | sed 's/[\\^~].*//' #"

[merge]
    conflictstyle = diff3

[core]
    editor = zed --wait

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

